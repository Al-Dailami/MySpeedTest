<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.num.myspeedtest.view.activities.AboutUsActivity"
    android:background="@color/frame_color"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Speed Test"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:fillViewport="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin_half"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="This application hopes to provide thorough and relevant network information to cellphone users. While gathering anonymous periodic data from the devices we plan to better understand the cellular ecosystem. Provide feedback and support us by reviewing and rating the app on the marketplace."
            android:textColor="@android:color/black"
            android:id="@+id/about_us_text"
            android:gravity="center"
            android:layout_gravity="center"/>

    </ScrollView>

    <LinearLayout
        android:id="@+id/about_us_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/background_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rate App"
            android:textColor="@android:color/black" />

    </LinearLayout>
</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBCDE3"
    android:padding="10dp"
    tools:context="com.num.myspeedtest.activities.ThroughputActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fffffdd7"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/main_linearlayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0. Mbps"
                android:id="@+id/text_pvalue"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ff7b7b7b"
                android:textStyle="bold" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progressBar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:progressDrawable="@drawable/custom_ring_progress"
                android:indeterminate="false"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="0"
                android:background="@drawable/custom_ring_background" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Download"
                android:id="@+id/text_download"
                android:paddingLeft="35dp"
                android:password="false"
                android:textColor="#ff7b7b7b"
                android:textStyle="bold"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0 Mbps"
                android:id="@+id/text_dvalue"
                android:paddingRight="35dp"
                android:layout_weight="0.5"
                android:textColor="#ff7b7b7b"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Upload"
                android:id="@+id/text_upload"
                android:paddingLeft="35dp"
                android:textColor="#ff7b7b7b"
                android:textStyle="bold"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0 Mbps"
                android:id="@+id/text_uvalue"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:paddingRight="35dp"
                android:textColor="#ff7b7b7b"
                android:textAlignment="gravity"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.1"
            android:id="@+id/linearlayout1"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Start"
                android:drawableTop="@drawable/ic_action_play"
                android:id="@+id/button_start"
                android:layout_weight="0.33"
                android:background="#ff0fa10f"
                android:textColor="#ffffffff"
                android:layout_marginRight="5dp"
                android:paddingTop="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Share"
                android:id="@+id/button_share"
                android:layout_weight="0.33"
                android:background="#ff0fa10f"
                android:drawableTop="@drawable/ic_action_share"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="History"
                android:drawableTop="@drawable/ic_action_paste"
                android:id="@+id/button_history"
                android:layout_weight="0.33"
                android:background="#ff0fa10f"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:paddingTop="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

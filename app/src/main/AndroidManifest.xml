<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.num.myspeedtest"
    android:installLocation="internalOnly" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.num.myspeedtest.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.ThroughputActivity"
            android:label="@string/title_activity_throughput"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.ThroughputHistoryActivity"
            android:label="@string/title_activity_throughput_history"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.LatencyActivity"
            android:label="@string/title_activity_latency"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.DataUsageActivity"
            android:label="DataUsageActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.TracerouteActivity"
            android:label="@string/title_activity_traceroute"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.ApplicationDetailActivity"
            android:label="@string/title_activity_application_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name="com.num.myspeedtest.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>

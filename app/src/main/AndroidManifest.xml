<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.num.myspeedtest"
    android:installLocation="internalOnly">
    
   	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ThroughputActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_throughput" >
        </activity>
        
        <activity
            android:name=".activities.ThroughputHistoryActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_throughput_history" >
        </activity>
        
        <activity
            android:name=".activities.LatencyActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_latency" >
        </activity>
        
        <activity
            android:name=".activities.DataUsageActivity"
            android:screenOrientation="portrait"
            android:label="DataUsageActivity" >
        </activity>
        
        <activity
            android:name=".activities.TracerouteActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_traceroute" >
        </activity>
        
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings" >
        </activity>
        
        <activity
            android:name=".activities.ApplicationDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_application_detail" >
        </activity>
	</application>
</manifest>

<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="internalOnly" android:versionCode="1" android:versionName="1.0" package="com.num.myspeedtest">
    
   	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-sdk android:minSdkVersion="12" android:targetSdkVersion="21"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        
        <activity android:label="@string/app_name" android:name="com.num.myspeedtest.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/title_activity_throughput" android:name="com.num.myspeedtest.activities.ThroughputActivity">
        </activity>
        
        <activity android:label="@string/title_activity_throughput_history" android:name="com.num.myspeedtest.activities.ThroughputHistoryActivity">
        </activity>
        
        <activity android:label="@string/title_activity_latency" android:name="com.num.myspeedtest.activities.LatencyActivity">
        </activity>
        
        <activity android:label="DataUsageActivity" android:name="com.num.myspeedtest.activities.DataUsageActivity">
        </activity>
        
        <activity android:label="@string/title_activity_traceroute" android:name="com.num.myspeedtest.activities.TracerouteActivity">
        </activity>
        
        <activity android:label="@string/title_activity_settings" android:name="com.num.myspeedtest.activities.SettingsActivity">
        </activity>
        
        <activity android:label="@string/title_activity_application_detail" android:name="com.num.myspeedtest.activities.ApplicationDetailActivity">
        </activity>
        
        <activity android:label="@string/title_activity_censorship" android:name="com.num.myspeedtest.activities.CensorshipActivity">
        </activity>

        <activity android:label="ScriptActivity" android:name="com.android.python27.ScriptActivity">
     	</activity>
        
        <activity android:label="FutureActivity" android:name="com.googlecode.android_scripting.activity.FutureActivity">
      	</activity>
        
        <activity android:label="DialogActivity" android:name="com.android.python27.DialogActivity">            	
      	</activity>

		<activity android:name="com.android.python27.RpcServerLauncher" android:taskAffinity="">
     		<intent-filter>
       			<action android:name="android.intent.action.VIEW"/>
       			<category android:name="android.intent.category.DEFAULT"/>
     		</intent-filter>
   		</activity>
    
		<service android:name="com.num.myspeedtest.RpcServerService"/>
        <service android:name="com.mobilyzer.MeasurementScheduler">
            <intent-filter android:priority="@string/scheduler_priority">
                <action android:name="com.mobilyzer.MeasurementScheduler"/>
            </intent-filter>
        </service>

        <service android:name="com.mobilyzer.gcm.GcmIntentService"/>
        <service android:name="com.mobilyzer.PLTExecutorService"/>
      <!-- <receiver android:name="com.mobilyzer.util.PhoneUtils$ConnectivityChangeReceiver">
    <intent-filter>
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
    </intent-filter>
	</receiver> --> 
	
    <receiver android:name="com.mobilyzer.gcm.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
              <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>   
                <category android:name="com.mobilyzer"/>
            </intent-filter>
        </receiver>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
	</application>
  	
  	<permission android:name="com.mobilyzer.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.BATTERY_STATS"/>
  	<uses-permission android:name="android.permission.USE_CREDENTIALS"/>
  	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="com.mobilyzer.permission.C2D_MESSAGE"/>

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.num.myspeedtest"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="internalOnly">
    
   	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ThroughputActivity"
            android:label="@string/title_activity_throughput" >
        </activity>
        
        <activity
            android:name=".activities.ThroughputHistoryActivity"
            android:label="@string/title_activity_throughput_history" >
        </activity>
        
        <activity
            android:name=".activities.LatencyActivity"
            android:label="@string/title_activity_latency" >
        </activity>
        
        <activity
            android:name=".activities.DataUsageActivity"
            android:label="DataUsageActivity" >
        </activity>
        
        <activity
            android:name=".activities.TracerouteActivity"
            android:label="@string/title_activity_traceroute" >
        </activity>
        
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        
        <activity
            android:name=".activities.ApplicationDetailActivity"
            android:label="@string/title_activity_application_detail" >
        </activity>
        
        <activity
            android:name=".activities.CensorshipActivity"
            android:label="@string/title_activity_censorship" >
        </activity>

        <activity
	     	android:name="com.android.python27.ScriptActivity"
   			android:label="ScriptActivity" >
     	</activity>
        
        <activity
      		android:name="com.googlecode.android_scripting.activity.FutureActivity" 
      		android:label="FutureActivity" >
      	</activity>
        
        <activity
   			android:name="com.android.python27.DialogActivity"
			android:label="DialogActivity" >            	
      	</activity>

		<activity
     		android:name="com.android.python27.RpcServerLauncher"
     		android:taskAffinity="" >
     		<intent-filter>
       			<action android:name="android.intent.action.VIEW" />
       			<category android:name="android.intent.category.DEFAULT" />
     		</intent-filter>
   		</activity>
    
		<service android:name=".RpcServerService" />
	</application>
</manifest>
